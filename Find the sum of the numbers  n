import java.util.*;
class Main {
    public static void main(String[] args) 
    {
        Scanner obj = new Scanner (System.in);
       System.out.print("Enter the range: ");
       int x = obj.nextInt();
       int sum=0;
       for(int i=0;i<x;i++)
       {
           sum+=i;
       }
       System.out.println(sum);
    }
}


import java.util.*;
public class palindrome {
    public static void main(String [] args)
    {
        Scanner sc = new Scanner(System.in);
       System.out.print("Enter the number: ");
       int n=sc.nextInt();
       int sum=0;
       int first=0;
       while(n !=0)
       {
           first = n%10;
           n=n/10;
           sum=sum+first;
       }
       System.out.print(" The sum of digits of a number: " +sum );
    }
}
